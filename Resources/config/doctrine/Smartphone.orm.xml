<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping 
    xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                        http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Ekyna\Bundle\DemoBundle\Entity\Smartphone" table="demo_smartphone">

        <field name="name" column="name" type="string" length="64" />
        <field name="html" column="html" type="text" nullable="true" />
        <field name="releasedAt" column="released_at" type="datetime" nullable="true" />

        <one-to-one field="seo" target-entity="Ekyna\Bundle\CmsBundle\Entity\Seo">
            <cascade>
                <cascade-all />
            </cascade>
            <join-column name="seo_id" referenced-column-name="id" />
        </one-to-one>

        <one-to-one field="characteristics" target-entity="Ekyna\Bundle\DemoBundle\Entity\SmartphoneCharacteristics" inversed-by="smartphone">
            <cascade>
                <cascade-all />
            </cascade>
            <join-column name="characteristics_id" referenced-column-name="id" />
        </one-to-one>

        <one-to-many field="images" target-entity="Ekyna\Bundle\DemoBundle\Entity\SmartphoneImage" mapped-by="smartphone">
            <cascade>
                <cascade-all/>
            </cascade>
            <order-by>
                <order-by-field name="position" direction="ASC" />
            </order-by>
        </one-to-many>

        <one-to-many field="variants" target-entity="Ekyna\Bundle\DemoBundle\Entity\SmartphoneVariant" mapped-by="smartphone">
            <cascade>
                <cascade-all/>
            </cascade>
        </one-to-many>

        <many-to-one field="category" target-entity="Ekyna\Bundle\DemoBundle\Entity\Category">
            <join-column name="category_id" referenced-column-name="id" nullable="false" />
        </many-to-one>

        <many-to-one field="brand" target-entity="Ekyna\Bundle\DemoBundle\Entity\Brand">
            <join-column name="brand_id" referenced-column-name="id" nullable="false" />
        </many-to-one>

        <many-to-many field="tags" target-entity="Ekyna\Bundle\DemoBundle\Entity\Tag">
	        <join-table name="demo_smartphone_tags">
	            <join-columns>
	                <join-column name="smartphone_id" referenced-column-name="id"/>
	            </join-columns>
	            <inverse-join-columns>
	                <join-column name="tag_id" referenced-column-name="id"/>
	            </inverse-join-columns>
	        </join-table>
	    </many-to-many>

    </entity>

</doctrine-mapping>