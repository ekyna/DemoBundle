{% extends "EkynaAdminBundle:Entity:sided.html.twig" %}

{% block title %}
<h1>{{ 'ekyna_demo.smartphoneVariant.header.edit'|trans({'%name%': smartphoneVariant.name})|raw }}</h1>
{% endblock %}

{% block actions %}
{{ ui_button('ekyna_core.button.back', {'type': 'link', 'path': path('ekyna_demo_smartphone_admin_show', identifiers)}) }}
{{ admin_resource_btn(smartphoneVariant, 'new') }}
{% endblock %}

{% block main %}
<form action="{{ path('ekyna_demo_smartphoneVariant_admin_edit', identifiers|merge({'smartphoneVariantId': smartphoneVariant.id})) }}" {{ form_enctype(form) }} method="post" class="form-horizontal form-with-tabs">
    {% include "EkynaDemoBundle:SmartphoneVariant/Admin:_form.html.twig" %}
    {{ ui_form_footer(form) }}
</form>
{% endblock %}

{% block side %}
{% endblock %}

{% block stylesheets -%}
    {{ parent() }}
    {% stylesheets output='css/characteristics.css' filter='cssrewrite, yui_css' debug=false
    '@EkynaCharacteristicsBundle/Resources/public/css/characteristics.css'
    %}
    <link href="{{ asset_url }}" rel="stylesheet" type="text/css" />
    {%- endstylesheets %}
{% endblock stylesheets %}